{
	"version": "1.2.6",
	"description": "A collection of utilities for Angular and Node.js applications, including JWT handling, MongoDB services, and more.",
	"name": "vecholib",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/StefanoVe/vecholib/"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"require": "./index.cjs",
			"types": "./types/index.d.ts"
		}
	},
	"scripts": {
		"build": "rm -rf dist && bunup && bunx tsc",
		"dev": "bunup --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"release": "bumpp --commit --push --tag && bun run publish:cli",
		"publish:ci": "bun publish --access public --no-git-checks",
		"publish:prepare": " bun run build && cp package.json ./dist/package.json && cp README.md ./dist/README.md && cp LICENSE ./dist/LICENSE && cd dist && bun pm pack --filename deploy.tgz",
		"publish:cli": "bun run publish:prepare && cd dist && bun publish --access public ./deploy.tgz && rm deploy.tgz"
	},
	"bunup": {
		"entry": [
			"src/client/index.ts",
			"src/server/index.ts",
			"src/utils/index.ts"
		],
		"format": [
			"esm",
			"cjs"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/bun": "latest",
		"@types/jest": "^30.0.0",
		"bumpp": "^10.2.0",
		"bun-plugin-dts": "^0.3.0",
		"bunup": "^0.8.48",
		"husky": "^9.1.7",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@angular/common": "^20.0.5",
		"@angular/core": "^20.0.5",
		"@angular/forms": "^20.0.5",
		"@angular/router": "^20.0.5",
		"@types/dropzone": "^5.7.9",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.0.4",
		"bun-types": "^1.2.17",
		"date-fns": "^4.1.0",
		"dropzone": "github:StefanoVe/dropzone",
		"express-validator": "^7.2.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.16.1",
		"ngx-mask": "^19.0.7",
		"tailwindcss": "^4.1.11"
	}
}
