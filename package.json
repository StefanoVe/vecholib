{
	"version": "1.6.3-beta.1",
	"description": "A collection of utilities for Angular and Node.js applications, including JWT handling, MongoDB services, and more.",
	"name": "vecholib",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/StefanoVe/vecholib/"
	},
	"exports": {
		"./utils": {
			"import": "./utils/index.js",
			"types": "./utils/index.d.ts"
		},
		"./angular/modules": {
			"import": "./angular/modules/fesm2022/modules.mjs",
			"types": "./angular/modules/index.d.ts"
		},
		"./angular/directives": {
			"import": "./angular/directives/fesm2022/directives.mjs",
			"types": "./angular/directives/index.d.ts"
		},
		"./angular/components": {
			"import": "./angular/components/fesm2022/components.mjs",
			"types": "./angular/components/index.d.ts"
		}
	},
	"bunup": {
		"entry": [
			"src/utils/index.ts"
		],
		"format": [
			"esm",
			"cjs"
		]
	},
	"scripts": {
		"build:utils": "rm -rf dist && bunup && bunx tsc && mv dist/types dist/utils && mv dist/index.js dist/utils/index.js && mv dist/index.cjs dist/utils/index.cjs && bun run postbuild",
		"build:angular": "cd src/angular && bun run build && cp -a dist/. ../../dist/angular && rm -rf dist",
		"build": "bun run build:utils && bun run build:angular",
		"dev": "bunup --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"release": "bumpp --commit --push --tag && bun run publish:cli",
		"publish:ci": "bun publish --access public --no-git-checks",
		"publish:prepare": " bun run build && cp README.md ./dist/README.md && cp LICENSE ./dist/LICENSE && cd dist && bun pm pack --filename deploy.tgz",
		"publish:cli": "bun run publish:prepare && cd dist && bun publish --access public ./deploy.tgz && rm deploy.tgz",
		"postbuild": "bun bundler/bundler.package-json.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/bun": "latest",
		"@types/dropzone": "^5.7.9",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.0.7",
		"@types/nodemailer": "^6.4.17",
		"bumpp": "^10.2.0",
		"bun-plugin-dts": "^0.3.0",
		"bunup": "^0.8.49",
		"husky": "^9.1.7",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@types/socket.io": "^3.0.2",
		"bun-types": "^1.2.17",
		"date-fns": "^4.1.0",
		"express": "^5.1.0",
		"express-validator": "^7.2.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.16.1",
		"nodemailer": "^7.0.4",
		"socket.io": "^4.8.1"
	}
}
